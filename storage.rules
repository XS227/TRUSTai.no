rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        request.auth.token.isAdmin == true
      );
    }

    match /invoices/{ambassadorId}/{fileName} {
      allow read: if isAdmin() || (isSignedIn() && request.auth.uid == ambassadorId);
      allow create: if isAdmin() || (isSignedIn() && request.auth.uid == ambassadorId);
      allow delete: if isAdmin();
      allow update: if false;
    }

    match /support/{ambassadorId}/{fileName} {
      allow read, create: if isAdmin() || (isSignedIn() && request.auth.uid == ambassadorId);
      allow delete, update: if isAdmin();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
